{
  "name": "@cloudnotes/backend",
  "version": "1.0.0",
  "description": "",
  "keywords": [],
  "license": "MIT",
  "author": "",
  "main": "index.js",
  "engines": {
    "node": "16"
  },
  "scripts": {
    "# general": "--------------------------------------------------------------------------------",
    "setup:env": "cp .env.example .env && cp .env.example.test .env.test",
    "ts": "node -r @swc-node/register -r dotenv/config",
    "lint": "eslint **/*.{js,ts}",
    "# dev": "------------------------------------------------------------------------------------",
    "dev": "pm2-dev ./other/pm2.config.js",
    "# prod": "-----------------------------------------------------------------------------------",
    "clean": "rm -rf dist",
    "build:database": "swc database -d database-dist --config-file .swcrcdb",
    "build": "pnpm run clean && swc src -d dist",
    "start": "NODE_ENV=production node index.js",
    "# test": "-----------------------------------------------------------------------------------",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --collect-coverage",
    "# db": "-------------------------------------------------------------------------------------",
    "db:new-migration": "pnpm run ts database/migrator.ts create",
    "db:migrate": "pnpm run ts database/migrator.ts up",
    "db:rollback": "pnpm run ts database/migrator.ts down",
    "db:rollback:all": "pnpm run ts database/migrator.ts down --step 30",
    "db:reset": "pnpm run db:rollback:all && pnpm run db:migrate"
  },
  "dependencies": {
    "@koa/cors": "^3.3.0",
    "@koa/router": "^10.1.1",
    "koa-jwt": "^4.0.3",
    "argon2": "^0.28.5",
    "class-transformer": "^0.5.1",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "http-errors": "^2.0.0",
    "http-status-codes": "^2.2.0",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-mount": "^4.0.0",
    "pg": "^8.7.3",
    "pg-hstore": "^2.3.4",
    "reflect-metadata": "^0.1.13",
    "regenerator-runtime": "^0.13.9",
    "sequelize": "^6.20.1",
    "sequelize-typescript": "^2.1.3",
    "tiny-invariant": "^1.2.0",
    "zod": "^3.17.3",
    "umzug": "^3.1.1",
    "jsonwebtoken": "^8.5.1"
  },
  "devDependencies": {
    "@swc-node/register": "^1.5.1",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.2.196",
    "@swc/helpers": "^0.3.17",
    "@swc/jest": "^0.2.21",
    "@types/express": "^4.17.13",
    "@types/http-errors": "^1.8.2",
    "@types/jest": "^28.1.1",
    "@types/koa": "^2.13.4",
    "@types/koa-bodyparser": "^4.3.7",
    "@types/koa-mount": "^4.0.1",
    "@types/koa__cors": "^3.3.0",
    "@types/koa__router": "^8.0.11",
    "@types/node": "^17.0.39",
    "@types/supertest": "^2.0.12",
    "@types/validator": "^13.7.2",
    "@types/jsonwebtoken": "^8.5.8",
    "c8": "^7.11.3",
    "jest": "^28.1.1",
    "pm2": "^5.2.0",
    "sequelize-cli": "^6.4.1",
    "supertest": "^6.2.3",
    "ts-node": "^10.8.1",
    "tsconfig": "workspace:*",
    "typescript": "^4.7.2"
  }
}
